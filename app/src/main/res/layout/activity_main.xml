<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="nanorep.nanoandroidwidgetdemoapp.MainActivity"
    android:background="#e41414">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:layout_marginTop="56dp"
        android:id="@+id/accountNameId"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:hint="account name"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:id="@+id/kbId"
        android:layout_below="@+id/accountNameId"
        android:textAlignment="center"
        android:inputType="text"
        android:hint="knowledge base"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:id="@+id/serverId"
        android:visibility="gone"
        android:layout_below="@+id/kbId"
        android:textAlignment="center"
        android:inputType="text"
        android:hint="Server"/>


    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="debug"
        android:layout_below="@+id/serverId"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prepare Nanorep"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/checkbox"
        android:id="@+id/prepareButton"
        android:layout_marginTop="20dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Nanorep"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/prepareButton"
        android:visibility="gone"
        android:id="@+id/button"
        android:layout_marginTop="20dp"/>

    <FrameLayout
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:text="debug"/>

</RelativeLayout>
